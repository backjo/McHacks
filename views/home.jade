extends layout

block content
 h1 Find Your Match 
  h2
   img(src="#{newUser.profile.picture}", width="257", height="326", align="center")
  h3
     |#{newUser.profile.name.first}, #{newUser.profile.university}
  h4
     |Gear:
  h5
     |#{gearString}
  h6
     |Interests:
  h7
     |#{newUser.profile.interest}
  h8
     |Experience:
  h9
     |#{newUser.profile.experience}
  #container.buttons
    form(action='/vote',method='post', id="form1")
       input(type='hidden', name='_csrf', value=token)
       input(type="hidden", name="isApproved", value="false", id="isApproved")
       input(type="hidden", name="userID", value="#{newUser._id}")
       img(src= "img/yes.png", width="80", height="80", onclick="$('#isApproved').val('true');$('#form1').submit()")
       img(src= "img/no.png", width="80", height="80", onclick="$('#isApproved').val('true');$('#form1').submit()")
